<div class="row g-5">
    <div class="col-md-8">
        <article class="blog-post">
            <h2 class="blog-post-title"><%= blog.title.upcase %></h2>
            <p class="blog-post-meta">Topic : <%= blog.topic.title %></p>
            <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>

            <p><%= blog.body %></p>
            <p><%= link_to 'Show', blog %></p>
            <% if logged_in?(:site_admin) %>
            
            <div class="btn-group">
                <%= link_to blog.status.capitalize, toggle_status_blog_path(blog) %>
                <%= link_to 'Edit', edit_blog_path(blog) %>
                <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
        </article>
    <% end %>
    </div>
</div>